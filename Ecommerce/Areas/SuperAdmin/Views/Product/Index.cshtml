@using Ecommerce.MVC.Areas.SuperAdmin.Models.Product
    @model ProductViewModel

<style>
    .button {
        background-color: red; /* Green */
        border: none;
        color: white;
        padding: 5px;
        text-align: center;
        text-decoration: none;
        display: inline-block;
        font-size: 14px;
        margin: 4px 2px;
        cursor: pointer;
    }


    .button5 {
        border-radius: 50%;
    }
</style>
<div class="row">
    <div class="col-lg-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body" style="border:1px solid #ccc;">
                <h4 class="card-title">Products</h4>
                <a class="btn btn-primary" asp-controller="Product" asp-action="create">Add</a>
                <div class="table-responsive pt-3" style="border:1px solid #ccc;">
                    <table class="table table-striped align-middle mb-0" style="min-width:1200px">
                        <thead>
                            <tr>
                                <th class="text-center align-middle" style="border:1px solid #ccc;">
                                    #
                                </th>
                                <th class="text-center align-middle" style="border:1px solid #ccc;">
                                    Product
                                </th>
                                <th class="text-center align-middle" style="border:1px solid #ccc;">
                                    Stock
                                </th>
                                <th class="text-center align-middle" style="border:1px solid #ccc;">
                                    Image
                                </th>
                                <th class="text-center align-middle" style="border:1px solid #ccc;">
                                    Price
                                </th>
                                <th class="text-center align-middle" style="border:1px solid #ccc;">
                                    Description
                                </th>
                                <th class="text-center align-middle" style="border:1px solid #ccc;">
                                    Brand
                                </th>
                                <th class="text-center align-middle" style="border:1px solid #ccc;">
                                    Category
                                </th>
                                <th class="text-center align-middle" style="border:1px solid #ccc;">
                                    Actions
                                </th>

                            </tr>
                        </thead>
                        <tbody>

                            @{
                                int count = 1;
                            }

                            @foreach (var item in Model.Products)
                            {
                                <tr>
                                    <td class="text-center align-middle" style="border:1px solid #ccc;">
                                        @count
                                    </td>
                                    <td class="text-center align-middle" style="border:1px solid #ccc;">
                                        @item.Name
                                    </td>
                                    <td class="text-center align-middle" style="border:1px solid #ccc;">
                                        @item.ProductVariants.Sum(v => v.Quantity)
                                    </td>
                                    <td class="text-center align-middle" style="border:1px solid #ccc;">
                                        <img src="~/Admin/products/@item.ImageUrl" alt="@item.Name"
                                             style="width:80px;height:80px;object-fit:cover;border-radius:6px;"
                                             loading="lazy" asp-append-version="true" />
                                    </td>

                                    <td class="text-center align-middle" style="border:1px solid #ccc;">
                                        @item.Price
                                    </td>
                                    <td class="text-center align-middle" style="border:1px solid #ccc;">
                                        @item.Description
                                    </td>
                                    <td class="text-center align-middle" style="border:1px solid #ccc;">
                                        @item.Brand!.Name
                                    </td>
                                    <td class="text-center align-middle" style="border:1px solid #ccc;">
                                        @item.Category.Name
                                    </td>
                                    

                                    <td style="border:1px solid #ccc;">
                                        <a class="btn btn-warning" asp-controller="Product" asp-action="Details" asp-route-id="@item.Id">Details</a>
                                        <a class="btn btn-warning" asp-controller="Product" asp-action="Update" asp-route-id="@item.Id">Update</a>

                                        <form asp-controller="Product" asp-action="Delete" asp-route-id="@item.Id" method="post" style="display:inline">
                                            <button type="submit" class="btn btn-danger">Delete</button>
                                        </form>

                                    </td>

                                </tr>

                                count++;
                            }

                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>