@using Ecommerce.MVC.Areas.SuperAdmin.Models.Product
@model UpdateProductViewModel

<div class="content-wrapper">
    <div class="row">
        <div class="col-md-6 grid-margin stretch-card">
            <div class="card">
                <div class="card-body" style="border:1px solid #ccc;">
                    <h4 class="card-title">Update Product</h4>
                    <form asp-action="Update" method="post" class="forms-sample" enctype="multipart/form-data">
                        <input type="hidden" asp-for="ProductId" />

                        <div class="form-group">
                            <label>Name</label>
                            <input asp-for="Name" class="form-control" placeholder="product name" />
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <label>Image File</label>
                            <input asp-for="ImageFile" type="file" class="form-control" />
                            <span asp-validation-for="ImageFile" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <label>Price</label>
                            <input asp-for="Price" type="number" class="form-control" placeholder="Price" />
                            <span asp-validation-for="Price" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <label>Description</label>
                            <input asp-for="Description" class="form-control" placeholder="Description" />
                            <span asp-validation-for="Description" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <label>Brand</label>
                            <select asp-for="BrandId" asp-items="Model.ListBrand" class="form-control">
                                <option value="">-- Brand seçin --</option>
                            </select>
                            <span asp-validation-for="BrandId" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <label>Category</label>
                            <select asp-for="CategoryId" asp-items="Model.ListCategory" class="form-control">
                                <option value="">-- Kateqoriya seçin --</option>
                            </select>
                            <span asp-validation-for="CategoryId" class="text-danger"></span>
                        </div>

                        <button type="submit" class="btn btn-primary mr-2">Submit</button>
                        <a asp-controller="Product" asp-action="Index" class="btn btn-light">Cancel</a>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
