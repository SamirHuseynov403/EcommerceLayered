
@using Ecommerce.MVC.Areas.SuperAdmin.Models.Details
@model DetailsProductListViewModel
<div class="row">
    <div class="col-lg-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body" style="border:1px solid #ccc;">
                <div class="card-body" style="border:1px solid #ccc;">
                    <h4>Product Info: Code: @Model.ProductCode Name: @Model.ProductName</h4>
                </div>
                <form asp-action="Create" asp-controller="DetailsProduct" method="post" class="forms-sample" enctype="multipart/form-data">
                    <input type="hidden" asp-for="ProductId" />
                    <input type="hidden" asp-for="ProductCode" />
                    <input type="hidden" asp-for="ProductName" />
                    <br>
                    <div class="card-body" style="border:1px solid #ccc;">
                            <label>Color</label>
                        <select asp-for="ColorId" asp-items="Model.ListColor" class="form-control" style="width:200px; border:1px solid #ccc;">
                                <option value="">-- Rəng seçin --</option>
                            </select>
                            <span asp-validation-for="ColorId"></span>
                            <br>
                        <br>
                        <label>Image File</label>
                        <input asp-for="ImageFile" type="file" class="form-control" />
                        <span asp-validation-for="ImageFile"></span>
                            <label class="font-weight-bold">Sizes</label>
                            <div class="form-group">
                                <table class="table table-bordered text-center" style=" width:auto;">
                                    <thead class="thead-light">
                                        <tr>
                                            @foreach (var size in Model.ListSize)
                                            {
                                                <th class="px-3 py-2">@size.Text</th>
                                            }
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <tr>
                                            @foreach (var size in Model.ListSize)
                                            {
                                                <td class="align-middle">
                                                    <input type="checkbox"
                                                           name="SelectedSizes"
                                                           value="@size.Value"
                                                           class="form-check-input mx-auto d-block" />
                                                </td>
                                            }
                                        </tr>
                                    </tbody>
                                </table>
                            </div>
                            <span asp-validation-for="SelectedSizes" class="text-danger"></span>
                            <label>Count</label>
                        <input asp-for="Quantity" class="form-control" style="width:200px; border:1px solid #ccc;" placeholder="Quantity">
                            <span asp-validation-for="Quantity"></span>
                        </div>
                        <br>
                        <button type="submit" class="btn btn-primary mr-2">Submit</button>
                        <a asp-controller="DetailsProductController" asp-action="Index" class="btn btn-light">Cancel</a>
                    </form>
                <br />
                <div class="table-responsive pt-3" style="border:1px solid #ccc;">
                    <table class="table table-bordered" style="border:1px solid #ccc;">
                        <thead>
                            <tr>
                                <th class="text-center align-middle" style="border:1px solid #ccc;">
                                    #
                                </th>
                                <th class="text-center align-middle" style="border:1px solid #ccc;">
                                    Color
                                </th>
                                <th class="text-center align-middle" style="border:1px solid #ccc;">
                                    Size
                                </th>
                                <th class="text-center align-middle" style="border:1px solid #ccc;">
                                    Quantity
                                </th>
                                <th class="text-center align-middle" style="border:1px solid #ccc;">
                                    Image
                                </th>
                                <th class="text-center align-middle" style="border:1px solid #ccc;">
                                    Actions
                                </th>
                            </tr>
                        </thead>
                        <tbody>
                            @{
                                int count = 1;
                            }
                            @foreach (var item in Model.DetailsProducts)
                            {
                                <tr>
                                    <td class="text-center align-middle" style="border:1px solid #ccc;">
                                        @count
                                    </td>
                                    <td class="text-center align-middle" style="border:1px solid #ccc;">
                                        @item.ColorName
                                    </td>
                                    <td class="text-center align-middle" style="border:1px solid #ccc;">
                                        @item.SizeName
                                    </td>
                                    <td class="text-center align-middle" style="border:1px solid #ccc;">
                                        @item.Quantity
                                    </td>
                                    <td class="text-center align-middle" style="border:1px solid #ccc;">
                                        <img src="~/Admin/images/ProductImages/@item.ImageName" alt="@item.ImageName"
                                             style="width:80px;height:80px;object-fit:cover;border-radius:6px;"
                                             loading="lazy" asp-append-version="true" />
                                    </td>

                                    <td style="border:1px solid #ccc;">

                                        <form asp-controller="DetailsProduct" asp-action="Delete" asp-route-id="@item.Id"
                                        method="post" style="display:inline" onsubmit="return confirm('Məhsul silinməsini təsdiq edin.')">
                                            <input type="hidden" name="ProductId" value="@Model.ProductId" />
                                            <button type="submit" class="btn btn-danger">Delete</button>
                                        </form>


                                    </td>

                                </tr>
                                count++;
                            }

                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>